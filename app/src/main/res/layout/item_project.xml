<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_project_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            app:cardCornerRadius="6dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/image_view_project_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                tools:src="@drawable/bmi_cal_img" />

        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/text_view_project_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/card_view_project_icon"
            android:layout_toEndOf="@id/card_view_project_icon"
            android:fontFamily="sans-serif-medium"
            tools:text="The app title"
            android:textColor="#222222"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/text_view_project_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_project_name"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/card_view_project_icon"
            android:fontFamily="sans-serif-light"
            android:paddingRight="5dp"
            android:paddingBottom="10dp"
            tools:text="The project description"
            android:textColor="#888888"
            android:textSize="12sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>